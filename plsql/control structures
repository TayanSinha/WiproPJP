1.
	sal number;
	begin
	empno:=&empno;
	ename:=&ename;
	sal:=&sal;
	select count(1) into n_count
	from emp
	where empno = empno;
	if(n_count>1) then
	insert into emp
	(empno,ename,sal)
	values
	(empno,ename,sal)
	dbms_output.put_line('new value inserted');
	else
	update emp
	set empno = empno,
	ename= enmae,
	sal sal;
	end if;
	end;

2.	
	declare 
	num number;
	begin
	num:=&num;
	if mod(num,2)=0
	then
	dbms_output.put_line('number is even');
	else
	dbms_output.put_line('number is odd');
	end if;
	end;

3.
	declare
	deptno number:=&deptno;
	begin
	if(deptno = 10) then
	update emp
	set sal = sal+(sal*10%)
	elsif(deptno = 20) then
	update emp
	set sal= sal + (sal*15%)
	else 
	update emp
	set sal =sal + comm;
	end if;
	end;

